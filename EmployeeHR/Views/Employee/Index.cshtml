@model IEnumerable<EmployeeHR.Models.EmployeeModel>
@{
	ViewData["Title"] = "Abd";

}
<h1>Employee</h1>
<p>
	<a asp-action="Creat">Create New</a>
</p>
<table class=" table">
	<thead>
		<tr>
			
			<th>@Html.DisplayNameFor(model=>model.Id)</th>
				
	


			<th>@Html.DisplayNameFor(model=>model.FirstName)</th>
			

			<th>	@Html.DisplayNameFor(model=>model.LastName)</th>
			

			<th>@Html.DisplayNameFor(model=>model.DOB)</th>
			

			<th>@Html.DisplayNameFor(model=>model.HiringDate)</th>
		

			<th>@Html.DisplayNameFor(model=>model.Email)</th>

			<th>@Html.DisplayNameFor(model=>model.IsActive)</th>
			
			<th>@Html.DisplayNameFor(model=>model.DepartmentId)</th>

			<th>@Html.DisplayNameFor(model=>model.Salary)</th>
			
			<th>@Html.DisplayNameFor(model=>model.Department.Name)</th>
			<th>@Html.DisplayNameFor(model=>model.Department.Abbreviation)</th>
				

		


		</tr>




	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(model=>item.Id)
				</td>
				<td>
					@Html.DisplayFor(model=>item.FirstName)
				</td>
				<td>
					@Html.DisplayFor(model=>item.LastName)
				</td>

				<td>
					@Html.DisplayFor(model=>item.DOB)
				</td>
				<td>
					@Html.DisplayFor(model=>item.HiringDate)
				</td>
				<td>
					@Html.DisplayFor(model=>item.Email)
				</td>
				<td>
					@Html.DisplayFor(model=>item.IsActive)
				</td>
				<td>
					@Html.DisplayFor(model=>item.DepartmentId)
				</td>
				<td>
					@Html.DisplayFor(model=>item.Salary)
				</td>
				<td>
					@Html.DisplayFor(model=>item.Department.Name)
				</td>
				<td>
					@Html.DisplayFor(model=>item.Department.Abbreviation)
				</td>
				<td>
					<a asp-action="Delet" asp-controller="Employee" asp-route-Id="@item.Id" class="btn btn-danger btn-sm pt-xxl-3">Delet</a>
				</td>
				<td>
					<a asp-action="Edit" asp-controller="Employee" asp-route-Id="@item.Id" class="btn btn-primary btn-sm pt-xxl-3">Edit</a>
				</td>
			</tr>
		}


	</tbody>


</table>

